{
  "family": "examapp-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::030461496359:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::030461496359:role/examapp-backend-role",
  "containerDefinitions": [
    {
      "name": "examapp-backend",
      "image": "030461496359.dkr.ecr.eu-west-1.amazonaws.com/examapp-backend:latest",
      "essential": true,
      "portMappings": [ { "containerPort": 3000, "protocol": "tcp" } ],
      "environment": [
        { "name": "EXAM_SOURCE", "value": "s3" },
        { "name": "AWS_REGION", "value": "eu-west-1" },
        { "name": "S3_BUCKET", "value": "certshack-examapp-questions" },
        { "name": "EXAMS_INDEX_TABLE", "value": "examapp-exams-index" },
        { "name": "ATTEMPTS_TABLE", "value": "examapp-attempts" },
        { "name": "GAM_TABLE", "value": "examapp-gamification" },
        { "name": "USERS_TABLE", "value": "examapp-users" },
        { "name": "ENTITLEMENTS_TABLE", "value": "examapp-entitlements" },
        { "name": "AUDIT_TABLE", "value": "examapp-audit" },
        { "name": "AUTH_MODE", "value": "cognito" },
        { "name": "COGNITO_DOMAIN", "value": "eu-west-1c6wqup1rx.auth.eu-west-1.amazoncognito.com" },
        { "name": "COGNITO_APP_CLIENT_ID", "value": "2b10tfhn1k9pq9rr5f6k14usc3" },
        { "name": "COGNITO_REGION", "value": "eu-west-1" },
        { "name": "COGNITO_USER_POOL_ID", "value": "eu-west-1_c6WQUP1RX" },
        { "name": "COGNITO_REDIRECT_URI", "value": "https://api.certshack.com/auth/token" },
        { "name": "FRONTEND_ORIGIN", "value": "https://certshack.com" }
      ],
      "secrets": [
        {
          "name": "COGNITO_APP_CLIENT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:eu-west-1:030461496359:secret:examapp/cognito-client-secret-jSS1a8"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/examapp",
          "awslogs-region": "eu-west-1",
          "awslogs-stream-prefix": "examapp"
        }
      }
    }
  ]
}
