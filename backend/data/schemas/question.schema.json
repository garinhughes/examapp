{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Exam Name",
  "type": "object",
  "required": ["code", "title", "questions"],
  "properties": {
    "code": { "type": "string" },
    "provider": { "type": "string" },
    "passMark": { "type": "number" },
    "defaultQuestions": { "type": "integer" },
    "defaultDuration": { "type": "integer" },
    "title": { "type": "string" },
    "logo": { "type": ["string", "null"] },
    "logoHref": { "type": ["string", "null"] },
    "level": {
      "type": "integer",
      "minimum": 0,
      "maximum": 3,
      "description": "Numeric difficulty/level indicator: 0 (lowest) -> 3 (highest)"
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "question", "choices"],
        "properties": {
          "id": { "oneOf": [{"type":"integer"},{"type":"string"}] },
          "docs": { "type": "string" },
          "format": { "type": "string" },
          "domain": { "type": "string" },
          "services": { "type": "array", "items": { "type": "string" } },
          "skills": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Optional array of skills this question maps to. Use a short identifier or free-form text (e.g. '1.1.1' or 'Manage Microsoft Entra users and groups')."
          },
          "question": { "type": "string" },
          "tip": { "type": "string" },
          "explanation": { "type": "string" },
          "selectCount": { "type": "integer" },
          "sourceType": {
            "type": "string",
            "enum": ["official-doc", "whitepaper", "best-practice", "public-guide"]
          },
          "lastReviewed": { "type": "string", "format": "date" },
          "choices": {
            "type": "array",
            "minItems": 2,
            "items": {
              "oneOf": [
                { "type": "string" },
                {
                  "type": "object",
                  "required": ["id", "text", "isCorrect", "explanation"],
                  "properties": {
                    "id": { "type": "string" },
                    "text": { "type": "string" },
                    "isCorrect": { "type": "boolean" },
                    "explanation": { "type": "string" }
                  }
                }
              ]
            }
          }
        }
      }
    }
  },
  "additionalProperties": true
}
